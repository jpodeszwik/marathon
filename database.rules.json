{
  "rules": {
    "users": {
      ".read": "root.child('users/' + auth.uid + '/manageUsers').val() === true",
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "root.child('users/' + auth.uid + '/manageUsers').val() === true"
      }
    },
    "fights": {
      ".read": "root.child('users/' + auth.uid + '/registerFights').val() === true"
    },
    "ranking": {
      ".read": true
    },
    "commands": {
      "register": {
        "$user_id": {
          "$command_id": {
            ".read": "$user_id === auth.uid",
            ".write": "false && $user_id === auth.uid && root.child('users/' + auth.uid + '/registerParticipants').val() === true && !data.exists()"
          }
        }
      },
      "changeFight": {
        "$user_id": {
          "$command_id": {
            ".read": "$user_id === auth.uid",
            ".write": "false && $user_id === auth.uid && root.child('users/' + auth.uid + '/registerFights').val() === true && !data.exists()"
          }
        }
      }
    },
    "participants": {
      ".read": "root.child('users/' + auth.uid + '/registerParticipants').val() === true"
    }
  }
}
